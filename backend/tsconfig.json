{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "commonjs",                       
    "rootDir": "src",                           
    "outDir": "build",                          
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,   
    "strict": true,                             
    "skipLibCheck": true,                       
    "moduleResolution": "node",                 
    "resolveJsonModule": true,                  
    "sourceMap": true                           
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
